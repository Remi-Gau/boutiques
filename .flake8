[flake8]
exclude =
    .git,
    __pycache__,
    build,
    dist,
	env,
	venv,
	docs/_build

docstring-convention = numpy
max-line-length = 80
max_complexity = 100
max_function_length = 650
max_parameters_amount = 12
max_returns_amount = 30

# ----------------------- errors to include / exclude -----------------------

# See https://flake8.pycqa.org/en/latest/user/violations.html#selecting-violations-with-flake8

# For PEP8 error codes see:
# http://pep8.readthedocs.org/en/latest/intro.html#error-codes
#
# The ruff website also has a very didactic explanations on the reasons
# why those rules exist:
# https://docs.astral.sh/ruff/rules/

--select = B,D,E,F,W,C90,CFQ

per-file-ignores =
	**/__init__.py: D104
    boutiques/tests/import/docopt/naval_fate.py: D208
    boutiques/tests/import/docopt/docopt_script_invalid.py: D400
    boutiques/tests/import/docopt/docopt_script_options.py: D400
    boutiques/tests/import/docopt/docopt_script_valid.py: D400, E501
    boutiques/schema/examples/example1/exampleTool1.py: E501
    boutiques/schema/examples/example1/exampleTool1_nonutf8.py: E501

extend-ignore = B005, B006, B008, D100, D101, D102, D103, D105, E203, E713, E721, F401, F405, F403, F841, F821, FS001, FS002
